{
  "name": "@vybestack/opentui",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "cd packages/core && bun run build && cd ../react && bun run build",
    "build:go": "cd packages/go && go build ./...",
    "pre-publish": "bun scripts/pre-publish.ts",
    "publish": "bun run pre-publish && bun run publish:core && bun run publish:react",
    "publish:core": "cd packages/core && bun run publish",
    "publish:react": "cd packages/react && bun run publish",
    "prepare-release": "bun scripts/prepare-release.ts",
    "test:go": "cd packages/go && go test -v . && go build ./examples/...",
    "prettier:write": "prettier --write .",
    "test": "bun run --filter '@vybestack/opentui-core' --filter '@vybestack/opentui-react' --if-present test"
  },
  "devDependencies": {
    "prettier": "3.6.2"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120
  }
}
